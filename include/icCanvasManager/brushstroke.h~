#ifndef __ICCANVASMANAGER_BRUSHSTROKE__H_
#define __ICCANVASMANAGER_BRUSHSTROKE__H_

#include "icCanvasManager.h"

namespace icCanvasManager {
    class BrushStroke {
        struct __ControlPoint {
            int x, y;
            int pressure;
            int tilt, angle;
            int dx, dy;
            
            __ControlPoint& operation+ (__ControlPoint& that);
            __ControlPoint& operation- (__ControlPoint& that);
            __ControlPoint& operation* (float& that);
        };
        
        typedef TMVBeizer<__ControlPoint, 3> __Spline;
        __ControlPoint __LastCP;
    public:
        const int PRESSURE_MAX = 65,536;
        const int TILT_ANGLE_QUARTER = 32,400;
        const int TILT_ANGLE_HALF = 64,800;
        const int TILT_ANGLE_FULL = 129,600;
    };
};

#endif
